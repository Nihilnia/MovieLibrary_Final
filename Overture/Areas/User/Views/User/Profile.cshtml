@using Overture.Areas.Database
@model User


@{
    ViewBag.Title = "Profile";
    Layout = "~/Areas/User/Views/Shared/_UserLayout.cshtml";
}

<h2>Profile</h2>

<html>
<head>
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
          rel="stylesheet" />
    <!-- Google Fonts -->
    @*<link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
        rel="stylesheet" />*@
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.0/mdb.min.css"
          rel="stylesheet" />

    <style>
        #daForm {
            width: 300px;
            height: 500px;
        }

        @@font-face {
            font-family: myFirstFont;
            src: url(/Content/ITC_Benguiat_Book.ttf);
        }
    </style>
</head>
<body>
    <div id="daForm">
        @using (Html.BeginForm("ProfileControl", "User", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {

            <b>@Html.Label("Kullanıcı Adınız:", new { @class = "form-label" })</b> @Html.Label(Model.UserName, new { @class = "form-label" })
            <hr />
            <b>@Html.Label("First Name:", new { @class = "form-label" })</b>
            <div class="form-outline mb-4">
                @Html.TextBox("firstName", Model.FirstName, new { @class = "form-control", required = "true" })
                @Html.Label("Current First Name", new { @class = "form-label" })

            </div>
            <br />
            <b>@Html.Label("Last Name:", new { @class = "form-label" })</b>
            <div class="form-outline mb-4">
                @Html.TextBox("lastName", Model.LastName, new { @class = "form-control", required = "true" })
                @Html.Label("Current Last Name", new { @class = "form-label" })
            </div>

            <br />
            <b>@Html.Label("E-Mail:", new { @class = "form-label" })</b>
            <div class="form-outline mb-4">
                @Html.TextBox("EMail", Model.EMail, new { @class = "form-control", required = "true" })
                @Html.Label("Current E-Mail", new { @class = "form-label" })
            </div>

            <!-- Password input -->
            <br />
            <b>@Html.Label("Password:", new { @class = "form-label" })</b>
            <div class="form-outline mb-4">
                @Html.TextBox("passWord", Model.Password, new { @class = "form-control", required = "true" })
                @Html.Label("Current Password", new { @class = "form-label" })
            </div>
            if (Model.ProfilePic != null)
            {
                <br />
                <b>@Html.Label("Upload your profile picture:", new { @class = "form-label" })</b>
                <div class="form-outline mb-4">
                    <input type="file" class="form-control" name="file" id="file" />
                </div>
            }
            else
            {
                <br />
                <b>@Html.Label("Upload your profile picture:", new { @class = "form-label" })</b>
                <div class="form-outline mb-4">
                    <input type="file" class="form-control" name="file" id="file" value="@Model.ProfilePic" required />
                </div>
            }


            <!-- 2 column grid layout for inline styling -->
            <!--<div class="row mb-4">
                <div class="col d-flex justify-content-center">
                    <label class="form-label" for="customFile">Upload your profile picture</label>

                </div>

                <input type="file" class="form-control" id="file" required />
            </div>-->

            <!-- Submit button -->
            @Html.Hidden("UserName")
            <button type="submit" class="btn btn-primary btn-block">Update</button>
            @Html.ActionLink("Delete Profile", "DeleteUser", "User", new { isDelete = true, userName = Model.UserName }, new { @class = "btn btn-primary", id = "btnDelete" })


        }
    </div>



    <!-- MDB -->
    <script type="text/javascript"
            src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.0/mdb.min.js">



    </script>

</body>


</html>